@model AlbumListeModelView

<table class="table table-hover table-bordered">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Album.Ad)
			</th>
			<th>
				@Html.DisplayNameFor(model =>model.Album.Sanatci)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Album.CikisTarihi)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Album.Fiyat)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Album.IndirimOrani)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Album.SatisDevamMi)
			</th>
			<th>
				İşlemler
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Albumler)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Ad)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Sanatci)
				</td>
				<td>
					@item.CikisTarihi.ToShortDateString()
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Fiyat)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IndirimOrani)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.SatisDevamMi)
				</td>
				<td>
					@Html.ActionLink("Detaylar", "Detaylar", new {  id=item.Id  }, new{@class="btn btn-info"})
					@Html.ActionLink("Guncelle", "AlbumEkleDuzenle", new { id=item.Id }, new{@class="btn btn-warning"})
					@Html.ActionLink("Sil", "Sil", new { id=item.Id }, new{@class="btn btn-danger"})
				</td>
			</tr>
		}
	</tbody>
</table>
